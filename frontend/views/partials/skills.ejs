<section id="skills" class="skills section-bg" data-aos="fade-up">
    <div class="container">

        <div class="section-title">
            <h2>Skills</h2>
            <p>This expedition for me is the beginning of a decade long learning journey to become
                a competent <strong>Software Engineer</strong>.</p>
        </div>
        <div id="accordion-button-cntr" class="accordion-button">
            <button
                    id="accordion-button"
                    class="btn btn-primary"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseExample"
                    aria-expanded="false"
                    aria-controls="collapseExample"
            >
                <i class="bx"></i> Show Less
            </button>
        </div> </br> </br>
        <div class="row skills-content">
            <!-- create the two columns -->
            <% let sentinel = 0; %>
            <% let rightColumnSentinel = 0; %>
            <% let leftColumnSentinel = 0; %>
            <% for(let i = 0; i < data.skills.length; i++) { %>

                <% if (i <= Math.floor(data.skills.length / 2) - 1) { %>
                    <!-- right column -->
                    <% if (rightColumnSentinel === 0) { %>
                        <div id="right-column" class="col-lg-6" data-aos="fade-up">
                            <div class="progress">
                                <span class="skill"><%- data.skills[i] %> <i class="val">100%</i></span>
                                <div class="progress-bar-wrap">
                                    <div
                                            class="progress-bar"
                                            role="progressbar"
                                            aria-valuenow="100"
                                            aria-valuemin="0"
                                            aria-valuemax="100"
                                    ></div>
                                </div>
                            </div>
                            <% rightColumnSentinel = 1; %> <!-- set the sentinel to 1 -->
                    <% } else { %>
                            <div class="progress">
                                <span class="skill"><%- data.skills[i] %> <i class="val">100%</i></span>
                                <div class="progress-bar-wrap">
                                    <div
                                            class="progress-bar"
                                            role="progressbar"
                                            aria-valuenow="100"
                                            aria-valuemin="0"
                                            aria-valuemax="100"
                                    ></div>
                                </div>
                            </div>
                    <% } %>
                <% } else { %>
                        <% if (leftColumnSentinel === 0) { %>
                                    <!-- left column -->
                            <div id="left-column" class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                            <div class="progress">
                                <span class="skill"><%- data.skills[i] %> <i class="val">100%</i></span>
                                <div class="progress-bar-wrap">
                                    <div
                                            class="progress-bar"
                                            role="progressbar"
                                            aria-valuenow="100"
                                            aria-valuemin="0"
                                            aria-valuemax="100"
                                    ></div>
                                </div>
                            </div>
                            <% leftColumnSentinel = 1; %> <!-- set the sentinel to 1 -->
                        <% } else { %>
                            <div class="progress">
                                <span class="skill"><%- data.skills[i] %> <i class="val">100%</i></span>
                                <div class="progress-bar-wrap">
                                    <div
                                            class="progress-bar"
                                            role="progressbar"
                                            aria-valuenow="100"
                                            aria-valuemin="0"
                                            aria-valuemax="100"
                                    ></div>
                                </div>
                            </div>
                        <% } %>
                <% } %>
                <% if (i === Math.floor(data.skills.length / 2) - 1) { %>
                        </div>
                <% } else if (i === data.skills.length - 1) { %>
                        </div>
                <% } %>
            <% } %> <!-- end for loop -->
        </div>
    </div>

</section>
<!-- End Skills Section -->
